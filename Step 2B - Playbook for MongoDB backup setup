#Create 'backup_setup.yml' under 'ansible/playbooks/'.
- hosts: all
  become: yes
  roles:
    - backup

#Creating role in 'ansible/roles/backup/tasks/main.yml'.
- name: Install a cron job for MongoDB backups
  cron:
    name: "MongoDB Backup"
    minute: "0"
    hour: "3"
    job: "/usr/bin/mongodump --out /vagrant/backups/$(date +\%F-\%T)"
